@model IEnumerable<Musicale.Models.Album>

@{
    ViewBag.Title = "Index";

}

@using (Html.BeginForm("Index", "Albums", FormMethod.Get, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="col-lg-12 col-xl-12 col-xs-12 p-0 m-0 bg-layout" id="main">
        <div class="row ">
            <div class=" col-lg-12 col-xl-12 p-0 m-0 justify-content-between">





                <h1 class="font-weight-bolder  mt-5 mb-5 text-white">Albums</h1>

                <div class="form">

                    <div class="input-group mb-3 ">
                        @Html.TextBox("busquedaAlbum", null, new { @class = "form-control" })
                        <input class="btn-dark" type="submit" value="Search" />
                    </div>

                </div>


                <div>

                    <a href="@Url.Action("Create", "Albums")" class="d-inline-flex btn btn-dark  ml-3 my-3"> Crear Nuevo</a>

                </div>
            </div>

        </div>

        <div class="row justify-content-center border-0 bg-light my-0 py-0">


            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 m-0 p-0">

                <div class="card-columns m-0 p-0">



                    @foreach (var item in Model)
                    {
                        <div class="card mt-3 img-thumbnail rounded albumes respoSize">
                            <img src="@Html.DisplayFor(modelItem =>item.portada)" class="card-img-top " alt="...">

                            <div class="card-body">
                                <h4 class="card-title">@Html.DisplayFor(modelItem => item.nombre)</h4>

                                <p> @Html.DisplayFor(modelItem => item.Artist.nombre)</p>

                                <p>  @Html.DisplayFor(modelItem => item.anio) @Html.HiddenFor(modelItem => item.Gender.genero)</p>

                                <div class="d-inline-flex justify-content-center">
                                    <a href="@Url.Action((string)"Details", "Albums", new { id = item.ID }, null)" class="btn bg-light align-content-end"> <i class="fas fa-eye"> </i></a>


                                    <a href="@Url.Action((string)"Edit", "Albums", new { id = item.ID }, null)" class="btn bg-light align-content-end"> <i class="fas fa-edit"> </i></a>


                                    <a href="@Url.Action((string)"Delete", "Albums", new { id = item.ID }, null)" class="btn bg-light">

                                        <i class="fas fa-trash"> </i>
                                    </a>
                                </div>

                            </div>
                        </div>



                    }

                </div>
            </div>
        </div>
    </div>

}

