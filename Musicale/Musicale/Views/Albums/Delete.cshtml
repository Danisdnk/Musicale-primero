@model Musicale.Models.Album

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm("Delete", "Albums", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="col-12 justify-content-center min-vh-100 p-0 m-0 bg-light" id="main">


        <div>
            <a href="@Request.UrlReferrer" class="btn btn-default btn-lg" title="Back to list">
                <span class="fas fa-arrow-left" aria-hidden="true"></span>
            </a>
        </div>
        <div class="row">


            <div class="col-3 w-25">

                <div class="hate">
                    <img src="@Html.DisplayFor(model=> model.portada)" class="hate" alt="...">

                </div>
            </div>
            <div class="col-8 w-100">

                <div>

                    <h2>¿Borrar Album?</h2>
                    <h4>@ViewBag.MyErrorMessage </h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.nombre)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.anio)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.anio)
                        </dd>



                        <dt>
                            @Html.DisplayNameFor(model => model.Artist.nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Artist.nombre)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Gender.genero)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Gender.genero)
                        </dd>

                    </dl>




                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-dark" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                </div>
            </div>
        </div>
    </div>
}