@model Musicale.Models.Artist

@{
    ViewBag.Title = "Editar Artista";
}



@using (Html.BeginForm("Edit", "Artists", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()


    <div class="col-12 justify-content-center min-vh-100 p-0 m-0 bg-light" id="main">
        <div>
            <a href="@Request.UrlReferrer" class="btn btn-default btn-lg" title="Back to list">
                <span class="fas fa-arrow-left" aria-hidden="true"></span>
            </a>
        </div>
        <h4 class="p-3">Artist Edit</h4>
        <hr />
        <div class="row">


            <div class="col-3 w-25">
                <div class="hate">
                    <img src="@Html.DisplayFor(model=> model.foto)" id="imagePreview" class="hate" alt="...">

                </div>
            </div>
            <div class="col-8 w-100">


                <div class="form-group">
                    <input type="file" id="ImgPortada" accept="image/* " class="file-label" name="ArtistImageFile" onchange="return fileValidation()" />
                    @Html.ValidationMessage("ArtistImageFile", "", new { @class = "text-danger" })


                </div>


                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })

                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.descripcion, new { @cols = "100", @rows = "8", @style = "width:100%;" })
                            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-dark" />
                        </div>
                    </div>
                </div>


            </div>
        </div>


    </div>
}






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
