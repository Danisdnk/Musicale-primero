@model Musicale.Models.Song

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Songs", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()


    <div class="col-12 justify-content-center min-vh-100 p-0 m-0 bg-light" id="main">
        <div>

            <a href="@Url.Action("Index", "Songs")" class="d-inline-flex btn btn-dark  ml-3 my-3"> volver</a>

        </div>


        <div class="row">



            <div class="col-3 w-25">

            </div>
            <div class="col-8 w-100">
                <h4 class="p-3 d-inline">Songs Crear</h4>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="file" id="AudioF" accept="audio/* " name="UserAudioFile" onchange="return fileValidationMP3()" />
                        @Html.ValidationMessage("UserAudioFile", "", new { @class = "text-danger" })
                        <div class="mt-5 w-100">
                            <audio controls="controls" id="AudioPreview">
                            </audio>

                        </div>

                    </div>
                </div>



                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AlbumID, "Album asociado", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("AlbumID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AlbumID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-dark" />
                        </div>
                    </div>
                </div>



                <div class="modal" tabindex="-1" role="dialog" id="myModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Upss!!</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    El formato de audio es invalido o pesa mas de 20mb .
                                    Asegurate que sea mp3/.mpeg/.ogg/.wav
                                </p>
                            </div>

                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>




}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
